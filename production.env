# Pathfinder Pro - Production Environment Configuration
# Copy this to .env and update the values for production

# Flask Configuration
FLASK_SECRET_KEY=your-super-secure-secret-key-here-change-this
DATABASE_URL=sqlite:///pathfinder_pro_production.db
FLASK_ENV=production
FLASK_DEBUG=False

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# API Keys (Required for AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=5001
WORKERS=4

# Application Settings
MAX_CONTENT_LENGTH=16777216
PERMANENT_SESSION_LIFETIME=3600 